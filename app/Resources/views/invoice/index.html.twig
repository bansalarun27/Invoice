<table border="1">
<tr>
<th>ID</th>
<th>Number</th>
<th>Date</th>
<th>Customer</th>
<th>First Name</th>
<th>Last Name</th>
<th>Description</th>
<th>Amount</th>
<th>Vat Amount</th>
<th>Total Amount</th>
<th>Action</th>
</tr>
{% for inv in invoice %}
<tr>
<td>{{inv.id}}</td>
<td>{{inv.invoiceNumber}}</td>
<td>{{inv.invoiceDate|date("d-m-Y")}}</td>
<td>{{inv.email}}</td>
<td>{{inv.firstName}}</td>
<td>{{inv.lastName}}</td>
<td>{{inv.description}}</td>
<td>{{inv.amount}}</td>
<td>{{inv.vatAmount}}</td>
<td>{{inv.totalAmount}}</td>
<td><a href="/invoice/form/{{inv.id}}">Edit</a></td>
</tr>
{% endfor %}

</table>